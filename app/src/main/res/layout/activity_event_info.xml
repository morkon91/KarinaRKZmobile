<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventInfoActivity.EventInfoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        >

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/colorAccent"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Alert Event Information"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorRed"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Temperature photo"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ordinary photo"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_behavior="com.google.android.material.appbar.appbarlayout$scrollingviewbehavior"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/location_event_info_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm event"
        android:paddingStart="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time of alarm event"
        android:paddingStart="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/time_of_alarm_event_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DD.MM.YYYY HH:MI:SS"
        android:paddingStart="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detected temperature"
        android:paddingStart="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/detected_temperature_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="38Â°"
        android:paddingStart="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"/>



</LinearLayout>